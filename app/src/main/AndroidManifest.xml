<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.peace.wunderlist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:name="org.peace.wunderlist.MyApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.LauncherActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

      <activity android:name=".ui.SplashActivity" android:theme="@style/FullScreenTheme" android:configChanges="orientation"/>
      <activity android:name=".ui.LoginActivity" android:configChanges="orientation"/>
      <activity android:name=".ui.HomeActivity" android:configChanges="orientation"/>


    </application>

</manifest>
