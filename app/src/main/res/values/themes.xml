<resources>

  <style name="BaseTheme"
      parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/orange</item>
    <item name="colorPrimaryDark">@color/orange</item>
    <item name="android:windowBackground">@color/background</item>
  </style>

  <style name="STBaseTheme"
      parent="BaseTheme">
  </style>

  <style name="STTheme"
      parent="STBaseTheme">
    <item name="android:windowAnimationStyle">@style/STTransitionAnim</item>
  </style>

  <style name="STSplashTheme"
      parent="STBaseTheme">
  </style>

  <style name="ToolBarTheme"
      parent="ThemeOverlay.AppCompat.Dark.ActionBar">
  </style>

  <style name="ToolBarTextAppearance"
      parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textColor">@color/color_3</item>
  </style>

  <style name="STTransitionAnim"
      parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/left_in</item>
    <item name="android:activityCloseExitAnimation">@anim/right_out</item>
  </style>
  
</resources>
